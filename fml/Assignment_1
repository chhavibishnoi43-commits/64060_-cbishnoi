
```{r setup, include=FALSE}
knitr::opts_chunk$set(echo = TRUE)
library(ggplot2)   # load ggplot2 for plots
library(dplyr)     # load dplyr for data manipulation

data <- read.csv("C:/Users/dhrit/Documents/mental_health_remote_workers.csv",
                 stringsAsFactors = TRUE)

```

```{r}
# Example quantitative variables: Age, Stress_level
summary(data$Age)
summary(data$Stress_level)
```


```{r}
# Example categorical variables: Gender, Country, Mental_health_disorder
table(data$Gender)
table(data$Country)
table(data$Mental_health_disorder)
```


```{r}
data$Age_Group <- cut(
  data$Age,
  breaks = c(0, 25, 40, 60, 100),
  labels = c("Young", "Adult", "Middle_Aged", "Senior")
)
table(data$Age_Group)
```


```{r}
ggplot(data, aes(x = Age)) +
  geom_histogram(binwidth = 5, fill = "skyblue", color = "black") +
  labs(title = "Distribution of Passenger Age", x = "Age", y = "Count")



```

```{r}
ggplot(data, aes(x = Hours_Worked_Per_Week, y = Productivity_Score, color = Gender)) +
  geom_point(alpha = 0.6, size = 3) +
  labs(
    title = "Scatterplot of Hours Worked vs Productivity",
    x = "Hours Worked Per Week",
    y = "Productivity Score"
  )

```

